{
  "name": "wallpaper-mac",
  "version": "1.0.0",
  "description": "A powerful macOS wallpaper engine",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder --mac"
  },
  "build": {
    "appId": "com.wallpaper.mac",
    "productName": "Wallpaper Mac",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "identity": null
    },
    "directories": {
      "output": "dist"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "ffmpeg-static"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "exiftool-vendored": "^34.3.0",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "uuid": "^13.0.0",
    "wallpaper": "^7.2.1"
  }
}
